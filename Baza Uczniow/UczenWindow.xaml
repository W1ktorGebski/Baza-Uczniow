<Window x:Class="BazaUczniow.UczenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj/Edytuj ucznia" Height="450" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="0,0,0,10">
            <Label Content="PESEL *"/>
            <TextBox x:Name="txtPESEL"/>
            <Label Content="Imię *"/>
            <TextBox x:Name="txtImie"/>
            <Label Content="Drugie imię"/>
            <TextBox x:Name="txtDrugieImie"/>
            <Label Content="Nazwisko *"/>
            <TextBox x:Name="txtNazwisko"/>
            <Label Content="Data urodzenia *"/>
            <DatePicker x:Name="dpDataUrodzenia"/>
            <Label Content="Telefon"/>
            <TextBox x:Name="txtTelefon"/>
            <Label Content="Adres *"/>
            <TextBox x:Name="txtAdres"/>
            <Label Content="Miejscowość *"/>
            <TextBox x:Name="txtMiejscowosc"/>
            <Label Content="Kod pocztowy *"/>
            <TextBox x:Name="txtKodPocztowy"/>
            <TextBlock x:Name="txtBlad" Foreground="Red" TextWrapping="Wrap"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Margin="0,5,10,0" Width="75" Click="Ok_Click"/>
            <Button Content="Cancel" Width="75" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
